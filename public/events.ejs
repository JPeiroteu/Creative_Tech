<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Events</title>
  </head>
  <body>
    <h1>Events</h1>
    <% if (events.length) { %>
      <ul>
        <% events.forEach(event => { %>
          <li>
            <h2><%= event.name %></h2>
            <p>Date: <%= event.date %></p>
            <p>Location: <%= event.location %></p>
            <p>Description: <%= event.description %></p>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No events found</p>
    <% } %>
  </body>
</html>
